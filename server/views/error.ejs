<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/icons/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>Metabike. | Oops...</title>
    <style>
      body {
        background-color: #e5ddcb;
        margin: 0;
        padding: 0;
        font-family: 'Roboto', 'Helvetica Neue', sans-serif;
        color: #524656;
      }
      .card {
        background-color: #a7c5bd;
        border-radius: 4px;
        box-shadow: 0 1px 1px 0 rgb(66 66 66 / 8%), 0 1px 3px 1px rgb(66 66 66 / 16%);
        margin: 6vh auto;
        padding: 40px;
        width: 800px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <div class="card">
      <h2>Error: <%= error.message %>...</h2>
      <% if (settings['verbose errors']) { %>
        <pre><%= error.stack %></pre>
      <% } %>

      <a href="/">Back</a>
    </div>
    <script type="module">
      import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.3/firebase-app.js";
      import { getAnalytics, logEvent } from "https://www.gstatic.com/firebasejs/9.6.3/firebase-analytics.js";
      const firebaseConfig = {
        apiKey: "AIzaSyCebwIFccWscqdPcrH2H7ACB-uwukOYZ9o",
        authDomain: "metabike-app.firebaseapp.com",
        projectId: "metabike-app",
        storageBucket: "metabike-app.appspot.com",
        messagingSenderId: "85837852395",
        appId: "1:85837852395:web:7245199aee2d43513c18ae",
        measurementId: "G-Z7PT0Y7SZF"
      };

      const app = initializeApp(firebaseConfig);
      const analytics = getAnalytics(app);
      window.analytics = analytics;
      window.logEvent = logEvent;
      logEvent(analytics, 'error_page', {
        code: '<%= error.status %>',
        message: '<%= error.message %>',
      })
    </script>
  </body>
</html>
